#!/usr/bin/env bash

webapp_dir="$HOME/.local/share/applications/webapps"

appid=${1?Missing appid}
appname=${2?Missing app name}
url=${3?Missing URL}

set -u

entry=$webapp_dir/${appid}.desktop
if [ -f "$entry" ]; then
	echo "ERROR: conflicting appid" >&2
	exit 1
fi

profile="$HOME/.mozilla/firefox/webapp-profile.$appid"
if [ ! -d "$profile" ]; then
	cp -r "$HOME/.local/share/firefox-webapps/base-profile" "$profile"
fi

mkdir -p "$webapp_dir"

cat <<EOF > "$entry"
[Desktop Entry]
Name=$appname
Exec=firefox --name '$appid' --profile '$profile' --no-remote '$url'
EOF
