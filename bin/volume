#!/usr/bin/env bash

get_current_volume() {
	pactl get-sink-volume $(pactl get-default-sink) | grep -oE '[0-9]+%' | head -n 1 | sed 's/%//'
}

pactl set-sink-volume $(pactl get-default-sink) "$1"

nid_file=${XDG_RUNTIME_DIR-/tmp}/volume.nid
if [ -f "$nid_file" ]; then
	notify-send --category 'sysinfo' --expire-time=1000 --print-id --replace-id $(cat "$nid_file") --hint="int:value:$(get_current_volume)" "ðŸ”Š" > "$nid_file"
else
	notify-send --category 'sysinfo' --expire-time=1000 --print-id --hint="int:value:$(get_current_volume)" "ðŸ”Š" > "$nid_file"
fi
